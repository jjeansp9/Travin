<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_marginLeft="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:id="@+id/cv">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/paris"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_hotel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="호텔 이름"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/cv"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hotel_title"
        android:layout_alignLeft="@id/tv_hotel_title"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="호텔 내용"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500000원"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_alignLeft="@id/tv_hotel_title"
        android:layout_alignParentBottom="true"/>

    <ToggleButton
        android:id="@+id/hotel_fav"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_fav_selector"
        android:textOff=" "
        android:textOn=" " />

</RelativeLayout>